{%extends "./layout.njk"%}

{%block content%}
  <div class="content_recipe_desc">
    {% if not recipe.image %}
      <img src="http://placehold.it/940x280?text=NÃO DEU TEMPO DE TIRAR A FOTO, COMERAM TUDO">
      {%else%}
      <img src="{{recipe.image}}" alt="{{recipe.title}}">
    {% endif %}
    <h1>{{recipe.title}}</h1>
    <p class="author">Por
      {{recipe.recipe_author}}</p>
    <div class="item">
      <h3>Ingredientes
        <span>Esconder</span></h3>

      <div class="ingredients">
        <ul>
          {%for ingredient in recipe.ingredients%}
            <li>{{ingredient}}</li>
            {%endfor%}
          </ul>
        </div>
      </div>
      <div class="item">
        <h3>Modo de preparo
          <span>Esconder</span></h3>
        <div class="preparation">
          <ul>
            {%for instructions in recipe.preparation%}
              <li>{{instructions}}</li>
              {%endfor%}
            </ul>
          </div>
        </div>
        <div class="item">
          <h3>Informações adicionais
            <span>Esconder</span></h3>

          <div class="information">
            <p>{{recipe.information}}</p>
          </div>
        </div>
      </div>
      {%endblock%}

      {% block scripts%}
        <script src="/recipedesc.js"></script>
        {%endblock%}