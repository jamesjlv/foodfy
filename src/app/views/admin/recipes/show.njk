{% extends "admin/layout.njk" %}

{% block content %}
  <div class="content_recipe_desc admin">
    <div class="name_recipe_admin">
      <div>
        <h3>Receita:
          {{recipe.title}}</h3>
      </div>
      <div class="link">
        <a href="/admin/recipes/{{recipe.id}}/edit">Editar Receita</a>
      </div>
    </div>
    <img src="{{recipe.image}}" alt="{{recipe.title}}">
    <h1>{{recipe.title}}</h1>
    <p class="author">Por
      {{recipe.recipe_author}}</p>
    <div class="item">
      <h3>Ingredientes</h3>
      <div class="ingredients">
        <ul>
          {%for ingredient in recipe.ingredients%}
            <li>{{ingredient}}</li>
            {%endfor%}
          </ul>
        </div>
      </div>
      <div class="item">
        <h3>Modo de preparo</h3>
        <div class="preparation">
          <ul>
            {%for instructions in recipe.preparation%}
              <li>{{instructions}}</li>
              {%endfor%}
            </ul>
          </div>
        </div>
        <div class="item">
          <h3>Informações adicionais</h3>
          <div class="information">
            <p>{{recipe.information}}</p>
          </div>
        </div>
      </div>
      {%endblock%}