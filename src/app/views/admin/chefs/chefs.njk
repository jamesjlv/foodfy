{% extends "../layout.njk" %}

{% block content %}

  <div class="content_admin_chefs">
    <div class="header">
      <div>
        <h1>Gerenciar Chefs</h1>
      </div>
      <div class="button_primary">
        <a href="/admin/chefs/create">Criar novo</a>
      </div>
    </div>
    <div class="chefs">
      {% for chef in chefs %}
        <div class="item">
          <div class="avatar">
            {% if not chef.avatar_url %}
              <img src="http://placehold.it/64x64?text=SEM FOTO">
              {%else%}
              <img src="{{chef.avatar_url}}" alt="Foto do chef">
            {% endif %}
          </div>
          <div class="details">
            <h2>{{chef.name}}</h2>
            <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
          </div>
        </div>
      {% endfor %}
    </div>

  </div>

{% endblock content %}